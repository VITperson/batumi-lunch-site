# Backend configuration
APP_NAME=BatumiLunch
API_V1_PREFIX=/api/v1
ENVIRONMENT=development
LOG_LEVEL=info

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=batumi_lunch
POSTGRES_USER=batumi
POSTGRES_PASSWORD=batumi_pass

# Redis
REDIS_URL=redis://redis:6379/0

# Storage (MinIO / S3-compatible)
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=batumi
S3_SECRET_KEY=batumi_secret
S3_BUCKET=batumi-lunch
S3_REGION=us-east-1
S3_SECURE=false

# Auth / security
JWT_SECRET=change-me
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=1209600
PASSWORD_PEPPER=change-me-too

# Admin
ADMIN_TELEGRAM_IDS=123456789
DEFAULT_ADMIN_EMAIL=admin@example.com

# Frontend
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Workers / notifications
EMAIL_SENDER=no-reply@batumi-lunch.local
SMTP_HOST=localhost
SMTP_PORT=1025
SMS_PROVIDER_API_KEY=

# Feature flags / placeholders
ENABLE_NEXT_WEEK_ORDERS=true

# Cypress / testing
E2E_BASE_URL=http://localhost:3000
